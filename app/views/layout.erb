<!doctype html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/normalize.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato+Normal:400italic,700italic,700,300">
        <link rel="stylesheet" href="/stylesheets/lib.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
        <title>Zoegram</title>
    </head>
    
    <body>
        <header>
            <h1>
                <a href="/">Zoegram</a>
            </h1>
            
            <div class="login-info">
                <% if current_user %>
                    <%= current_user.username %>
                    <div class=button>
                    <a href="/logout">Logout</a>
                    </div>
                <% else %>
                    <div class=button>
                    <a href="/login">Login</a>
                    </div>
                    <div class=button>
                    <a href="/signup">Signup</a>
                    </div>
                <% end %>
            </div>
         </header>
         <main role="main">
        <%= yield %>
        </main>
    </body>
</html>